<style>
    .form-group {
        margin-bottom: 20px;
    }
</style>
<div class="container">
    <form action="/update-products" method="POST">
        <input type="hidden" class="form-control" id="productName" name="id" placeholder="Enter product name" value="<%= data._id %>">
        <div class="form-group">
            <label for="productName">Product Name</label>
            <input type="text" class="form-control" id="productName" name="name" placeholder="Enter product name" value="<%= data.name %>">
        </div>
        <div class="form-group">
            <label for="productCategory">Product Category</label>
            <input type="text" class="form-control" id="productCategory" name="category" placeholder="Enter product category" value="<%= data.category %>">
        </div>
        <div class="form-group">
            <label for="productCategory">Product Type</label>
            <input type="text" class="form-control" id="productCategory" name="type" placeholder="Enter product type" value="<%= data.type %>">
        </div>
        <div class="form-group">
            <label for="productQuantity">Product Quantity</label>
            <input type="number" class="form-control" id="productQuantity" name="quantity" placeholder="Enter product quantity" value="<%= data.quantity %>">
        </div>
        <div class="form-group">
            <label for="productPrice">Product Price</label>
            <input type="number" class="form-control" id="productPrice" name="price" placeholder="Enter product price" value="<%= data.price %>">
        </div>
        <div class="form-group">
          <label for="productPrice">Front Image URL</label>
          <input type="text" class="form-control" id="productPrice" name="front_img" placeholder="Enter front img url" value="<%= data.front_img %>">
        </div>
        <div class="form-group">
          <label for="productPrice">Back Image URL</label>
          <input type="text" class="form-control" id="productPrice" name="back_img" placeholder="Enter back img url" value="<%= data.back_img %>">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>